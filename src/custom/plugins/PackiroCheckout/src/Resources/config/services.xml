<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <imports>
        <import resource="controllers.xml"/>
        <import resource="subscribers.xml"/>
        <import resource="rules.xml"/>
        <import resource="collectors.xml"/>
        <import resource="processors.xml"/>
        <import resource="calculators.xml"/>
    </imports>

    <services>

        <service id="Packiro\Checkout\Service\Cart\CartService">
            <argument type="service" id="Shopware\Core\Checkout\Cart\CartPersister"/>
            <argument type="service" id="Shopware\Core\System\SalesChannel\Context\SalesChannelContextPersister"/>
            <argument type="service" id="Packiro\Checkout\Reader\Cart\CartReader"/>
            <argument type="service" id="Packiro\Checkout\Reader\Promotion\PromotionReader"/>
            <argument type="service" id="Packiro\Checkout\Factory\Cart\LineItemFactory"/>
            <argument type="service" id="Shopware\Core\Checkout\Cart\CartCalculator"/>
            <argument type="service" id="Shopware\Core\Checkout\Cart\Price\QuantityPriceCalculator"/>
            <argument type="service" id="Shopware\Core\Checkout\Cart\Delivery\DeliveryCalculator"/>
        </service>

        <service id="Packiro\Checkout\DAL\Extension\Core\Checkout\Order\OrderExtension">
            <tag name="shopware.entity.extension"/>
        </service>

        <service id="Packiro\Checkout\DAL\Extension\Core\Checkout\Order\SplitOrderDefinition">
            <tag name="shopware.entity.definition" entity="pc_order" />
        </service>

        <service id="Packiro\Checkout\Writer\Cart\CartPersisterDecorator"
                 decorates="Shopware\Core\Checkout\Cart\CartPersister"
                 public="true"
                 decoration-priority="10">
            <argument type="service" id="Packiro\Checkout\Writer\Cart\CartPersisterDecorator.inner"/>
            <argument type="service" id="Doctrine\DBAL\Connection"/>
            <argument type="service" id="Packiro\Checkout\Reader\Cart\CartReader"/>
            <argument type="service" id="packiro.checkout.logger"/>
        </service>

        <service id="Packiro\Checkout\Reader\Cart\CartReader">
            <argument type="service" id="Doctrine\DBAL\Connection"/>
        </service>

        <service id="Packiro\Checkout\Factory\Cart\LineItemFactory">
            <argument type="service" id="Shopware\Core\Checkout\Promotion\Cart\PromotionItemBuilder"/>
        </service>

        <service id="Packiro\Checkout\Reader\Promotion\PromotionReader">
            <argument type="service" id="Shopware\Core\Checkout\Promotion\Gateway\PromotionGateway"/>
        </service>

        <service id="Packiro\Checkout\Service\Order\OrderService">
            <argument type="service" id="Shopware\Core\Checkout\Cart\CartPersister"/>
            <argument type="service" id="order.repository"/>
            <argument type="service" id="pc_order.repository" />
            <argument type="service" id="Packiro\Core\Service\UpdateExistingExtensionService" />
            <argument type="service" id="Packiro\Checkout\Writer\Order\OrderPersister" />
        </service>

        <service id="Packiro\Checkout\Reader\Order\OrderReader">
            <argument type="service" id="order.repository"/>
        </service>

        <service id="Packiro\Checkout\Service\Order\OrderExtraFieldService">
            <argument type="service" id="order.repository" />
            <argument type="service" id="pc_order.repository" />
            <argument type="service" id="Packiro\Core\Service\UpdateExistingExtensionService" />
        </service>

        <service id="Packiro\Checkout\Service\Cart\LineItemAccessoryService">
            <argument type="service" id="Shopware\Core\Checkout\Cart\CartPersister" />
            <argument type="service" id="Shopware\Core\Checkout\Cart\CartCalculator" />
            <argument type="service" id="Packiro\Checkout\Reader\Cart\CartReader" />
            <argument type="service" id="Packiro\Checkout\Service\Cart\CartService" />
            <argument type="service" id="Packiro\Checkout\Factory\Cart\LineItemFactory" />
        </service>

        <service id="Packiro\Checkout\Factory\Cart\AccessoryFactory">
        </service>

        <service id="packiro.checkout.logger" class="Monolog\Logger">
            <factory service="Packiro\Core\Factory\Logger\StreamLoggerFactory" method="createLogger"/>
            <argument key="$name">packiro_checkout</argument>
            <argument key="$level">200</argument>
        </service>

        <service id="Packiro\Checkout\Writer\Order\OrderPersister">
            <argument type="service" id="Doctrine\DBAL\Connection"/>
        </service>

    </services>
</container>
