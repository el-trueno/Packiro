<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="Packiro\Checkout\Controller\StoreApi\CheckoutController" public="true">
            <argument type="service" id="Packiro\Checkout\Service\Cart\CartService"/>
        </service>

        <service id="Packiro\Checkout\Controller\StoreApi\Cart\CartOrderRoute"
                 decorates="Shopware\Core\Checkout\Cart\SalesChannel\CartOrderRoute"
                 public="true"
                 decoration-priority="-10">
            <argument type="service" id="Packiro\Checkout\Controller\StoreApi\Cart\CartOrderRoute.inner"/>
            <argument type="service" id="Packiro\Checkout\Reader\Cart\CartReader"/>
            <argument type="service" id="Packiro\Checkout\Service\Order\OrderService"/>
            <argument type="service" id="Shopware\Core\Checkout\Cart\CartPersister"/>
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="packiro.checkout.logger"/>
            <argument type="service" id="Packiro\Checkout\Controller\StoreApi\Cart\CartItemAddRoute.inner"/>
            <argument type="service" id="Packiro\Checkout\Service\Cart\CartService"/>
        </service>

        <service id="Packiro\Checkout\Controller\StoreApi\Cart\CartItemAddRoute"
                 decorates="Shopware\Core\Checkout\Cart\SalesChannel\CartItemAddRoute"
                 public="true"
                 decoration-priority="-10">
            <argument type="service" id="Packiro\Checkout\Controller\StoreApi\Cart\CartItemAddRoute.inner"/>
            <argument type="service" id="Shopware\Core\Checkout\Cart\LineItemFactoryRegistry"/>
            <argument type="service" id="Packiro\Checkout\Service\Cart\CartService"/>
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="Shopware\Core\Checkout\Cart\CartCalculator"/>
            <argument type="service" id="packiro.checkout.logger"/>
        </service>

        <service id="Packiro\Checkout\Controller\StoreApi\Cart\CartItemRemoveRoute"
                 decorates="Shopware\Core\Checkout\Cart\SalesChannel\CartItemRemoveRoute"
                 public="true"
                 decoration-priority="-10">
            <argument type="service" id="Packiro\Checkout\Controller\StoreApi\Cart\CartItemRemoveRoute.inner"/>
            <argument type="service" id="Packiro\Checkout\Reader\Cart\CartReader"/>
            <argument type="service" id="packiro.checkout.logger"/>
        </service>

        <service id="Packiro\Checkout\Controller\StoreApi\Cart\CartLoadRoute"
                 decorates="Shopware\Core\Checkout\Cart\SalesChannel\CartLoadRoute"
                 public="true"
                 decoration-priority="-10">
            <argument type="service" id="Packiro\Checkout\Controller\StoreApi\Cart\CartLoadRoute.inner"/>
            <argument type="service" id="Packiro\Checkout\Service\Cart\CartService"/>
        </service>

        <service id="Packiro\Checkout\Controller\StoreApi\StateMachine\StateMachineHistoryController" public="true">
            <argument type="service" id="order.repository"/>
            <argument type="service" id="state_machine_history.repository"/>
            <argument type="service" id="Shopware\Core\Framework\Api\Response\Type\Api\JsonType"/>
        </service>

        <service id="Packiro\Checkout\Controller\StoreApi\Cart\CartAccessoryController" public="true">
            <argument type="service" id="Packiro\Checkout\Service\Cart\LineItemAccessoryService"/>
            <argument type="service" id="Packiro\Checkout\Factory\Cart\AccessoryFactory"/>
        </service>

    </services>
</container>
