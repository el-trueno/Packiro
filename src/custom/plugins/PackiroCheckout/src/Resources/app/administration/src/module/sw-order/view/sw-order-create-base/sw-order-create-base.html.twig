{# This's suppposed to fix a mysterious issue: "TypeError: Cannot read properties of undefined (reading 'key')" #}
{% block sw_order_create_base_line_items_summary_taxes %}
    <template v-if="taxStatus !== 'tax-free'">
        <template v-for="(calculatedTax, index) in filteredCalculatedTaxes">
            <dt :key="`dt-${calculatedTax.apiAlias}-${index}`">
                {{ $tc('sw-order.createBase.summaryLabelTaxes', 1, { taxRate: calculatedTax.taxRate }) }}
            </dt>
            <dd :key="`dd-${calculatedTax.apiAlias}-${index}`">
                {{ calculatedTax.tax | currency(currency.shortName) }}
            </dd>
        </template>
    </template>
{% endblock %}
