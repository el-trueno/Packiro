<sw-modal
        class="pc-pro-lib-item-order-configurator-modal"
        :title="$tc('sw-order.detailBase.showProLibOrderItemConfiguratorModal')"
        :subtitle="subtitle"
        :closable="false"
        variant="large"
>
    <pc-pro-lib-item-order
            :cartLineItemId="cartLineItem.id"
            :productId="cartLineItem.referenceId"
            :customerId="customer.id"
