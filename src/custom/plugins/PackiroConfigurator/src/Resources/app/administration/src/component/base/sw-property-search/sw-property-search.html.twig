{% block sw_property_search_tree_group_grid_columns_name %}
    <sw-grid-column
            truncate
            class="group_grid__column-name"
            flex="auto"
            data-index="name"
            @click="selectGroup(item)"
    >
        <sw-icon
                name="multicolor-folder-breadcrumbs"
                size="16px"
                multicolor
        />
        {{ item.translated.name }} -
        {{ item.translated.customFields.technicalName }}
    </sw-grid-column>
{% endblock %}

{% block sw_property_search_tree_option_grid_columns_name %}
    <sw-grid-column
            class="sw-property-search__tree-selection__option_grid--option-value"
            truncate
            flex="minmax(0, 1fr)"
            data-index="name"
            :title="item.translated.name"
    >
        {{ item.translated.name }} -
        {{ item.translated.customFields.technicalName }}
    </sw-grid-column>
{% endblock %}


{% block sw_property_search_option_search_grid_columns_name %}
    <sw-grid-column
            flex="300px"
            data-index="name"
    >
        {{ item.group.translated.name }} - {{ item.group.translated.customFields.technicalName }} /
        {{ item.translated.name }} - {{ item.translated.customFields.technicalName }}
    </sw-grid-column>
{% endblock %}
